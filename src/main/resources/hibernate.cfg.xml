<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">ED6464</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <mapping class="Main.Tables.Bank"/>
        <mapping class="Main.Tables.CashDesksDelivery"/>
        <mapping class="Main.Tables.CashDesksSales"/>
        <mapping class="Main.Tables.Clients"/>
        <mapping class="Main.Tables.Deliveries"/>
        <mapping class="Main.Tables.ProductDeliveries"/>
        <mapping class="Main.Tables.Products"/>
        <mapping class="Main.Tables.ProductSales"/>
        <mapping class="Main.Tables.ProviderProducts"/>
        <mapping class="Main.Tables.Providers"/>
        <mapping class="Main.Tables.Roles"/>
        <mapping class="Main.Tables.Sales"/>
        <mapping class="Main.Tables.Users"/>
    </session-factory>
</hibernate-configuration>